{
  "name": "@scope/contracts",
  "version": "1.0.0",
  "main": "index.ts",
  "license": "MIT",
  "scripts": {
    "dev": "npx hardhat node",
    "format": "prettier --check \"**/*.{ts,js,sol}\"",
    "format:fix": "prettier --write \"**/*.{ts,js,sol}\"",
    "prettier": "prettier --write 'contracts/**/*.sol'",
    "build": "yarn clean && yarn compile",
    "test": "npx hardhat test --show-stack-traces",
    "size": "yarn hardhat size-contracts",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "coverage": "npx hardhat coverage",
    "slither:analysis": "yarn hardhat clean && yarn hardhat compile --force && rm -f sarif.sarif  && slither . --filter-path node_modules --ignore-compile --no-fail-pedantic  --sarif  sarif.sarif --exclude-dependencies --exclude-optimization --exclude-informational  --config-file ./slither.config.json"
  },
  "devDependencies": {
    "@gnosis.pm/safe-contracts": "^1.3.0",
    "@gnosis.pm/safe-deployments": "^1.16.0",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.3",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@openzeppelin/contracts": "^4.9.2",
    "@openzeppelin/contracts-upgradeable": "^4.9.2",
    "@openzeppelin/upgrades-core": "^1.24.0",
    "@scope/tsconfig": "*",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/bn.js": "^5.1.1",
    "@types/chai": "^4.3.3",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "bn.js": "^5.2.1",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^16.0.1",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "ethers": "5.7.2",
    "hardhat": "^2.16.1",
    "hardhat-contract-sizer": "^2.8.0",
    "hardhat-deploy": "^0.11.12",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-log-remover": "^2.0.2",
    "hardhat-tracer": "^1.1.0-rc.6",
    "mocha": "^10.0.0",
    "prettier": "^2.8.3",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.2.0",
    "typescript": "4.9.5"
  }
}
